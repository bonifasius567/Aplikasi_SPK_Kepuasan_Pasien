                    <div class="text-muted" id="errorMessage"></div>
                </div>
                <div class="modal-footer">
                    <div class="w-100">
                        <div class="row">
                            <div class="col">
                                <a href="#" class="btn btn-danger w-100" data-bs-dismiss="modal">
                                    Continue
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>


    <div class="modal modal-blur fade" id="success-modal" tabindex="-1" role="dialog" aria-hidden="true">
        <div class="modal-dialog modal-sm modal-dialog-centered" role="document">
            <div class="modal-content">
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                <div class="modal-status bg-success"></div>
                <div class="modal-body text-center py-4">
                    <svg xmlns="http://www.w3.org/2000/svg" class="icon mb-2 text-success icon-lg" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round"><path stroke="none" d="M0 0h24v24H0z" fill="none" /><path d="M10.24 3.957l-8.422 14.06a1.989 1.989 0 0 0 1.7 2.983h16.845a1.989 1.989 0 0 0 1.7 -2.983l-8.423 -14.06a1.989 1.989 0 0 0 -3.4 0z" /><path d="M12 9v4" /><path d="M12 17h.01" /></svg>
                    <h3>Success</h3>
                    <div class="text-muted" id="successMessage"></div>
                </div>
                <div class="modal-footer">
                    <div class="w-100">
                        <div class="row">
                            <div class="col">
                                <a href="#" class="btn btn-success w-100" data-bs-dismiss="modal">
                                    Continue
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="~/Content/assets/libs/jquery/dist/jquery.min.js"></script>
    <script src="~/Content/assets/libs/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/Content/assets/libs/dataTables/datatables.min.js"></script>
    <script src="~/Content/assets/libs/tom-select/tom-select.complete.min.js"></script>
    <script src="~/Content/assets/js/sidebarmenu.js"></script>
    <script src="~/Content/assets/js/app.min.js"></script>

    <script>
        document.addEventListener("DOMContentLoaded", function () {
            var currentPathname = window.location.pathname;
            var indexOfQueryParams = currentPathname.indexOf('?');
            var pathnameWithoutQuery = (indexOfQueryParams !== -1) ? currentPathname.substring(0, indexOfQueryParams) : currentPathname;
            if (pathnameWithoutQuery == '/Home/Index') {
                pathnameWithoutQuery = '/';
            }

            var targetElement = document.querySelector('a[href="' + pathnameWithoutQuery + '"]:not(.logo)');

            if (targetElement) {
                targetElement.classList.add('active');
                targetElement.classList.add('bg-teal');
                targetElement.classList.add('text-light');

                var svgElement = targetElement.querySelector('svg');

                if (svgElement) {
                    svgElement.setAttribute('stroke', 'white');
                }
            }

        });

        const storedTheme = localStorage.getItem('theme');
        let currentTheme = storedTheme || 'light';

        function toggleTheme() {
            const selectedTheme = currentTheme === 'light' ? 'dark' : 'light';

            if (selectedTheme === 'dark') {
                document.body.setAttribute("data-bs-theme", selectedTheme);
            } else {
                document.body.removeAttribute("data-bs-theme");
            }

            document.body.setAttribute('data-bs-theme', selectedTheme);
            localStorage.setItem('theme', selectedTheme);
            currentTheme = selectedTheme;
        }

    </script>

    @RenderSection("scripts", required: false)
</body>
</html>