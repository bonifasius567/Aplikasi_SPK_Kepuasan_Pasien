    <link rel="shortcut icon" type="image/png" href="~/Content/assets/images/lkpgd.ico" />
    <link href="~/Content/assets/libs/dataTables/datatables.min.css" rel="stylesheet">
    <link href="~/Content/assets/libs/tom-select/tom-select.css" rel="stylesheet">
    <link rel="stylesheet" href="~/Content/assets/css/styles.min.css" />

</head>
<body>
    <div class="page-wrapper" id="main-wrapper" data-layout="vertical" data-navbarbg="skin6" data-sidebartype="full"
         data-sidebar-position="fixed" data-header-position="fixed">

        <aside class="left-sidebar">
            <!-- Sidebar scroll-->
